        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="colorPrimary">@color/black_smoke</item>
        <item name="colorPrimaryVariant">@color/cardBackground</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/black_smoke</item>
        <item name="cardBackgroundColor">@color/white_smoke</item>

        <item name="card_background">@color/bac_food</item>
        <item name="card_blue_background">@color/blue</item>


        <item name="android:fontFamily">@font/poppins_semi_bold</item>
